.plump-group
  display: flex
  min-height: em($plump-height) // FIX: Use plump on `<select>`

  .plump
    flex: 1 0 auto // BUG: Safari and Android sets `flex-basis: 0` when using shorthand

    + .plump
      margin: em(0 0 0 $plump-margin)

  &.-button > .plump
    @extend %plump-button

  &.-column
    flex-flow: column

    > .plump + .plump
      margin: em($plump-margin 0 0)
